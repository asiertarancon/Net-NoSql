<Window x:Class="MongoDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MongoDB"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Content="Conectar con MongoDB" Click="Button_Click"/>
            <Button Content="Insertar" Click="Button_Click_1" Margin="10,0,0,0"/>
            <Button Content="Actualizar" Click="Button_Click_3" Margin="10,0,0,0"/>
            <!--<Button Content="Eliminar" Click="Button_Click_4" Margin="10,0,0,0"/>-->
            <Button Content="Mostrar personas" Click="Button_Click_2" Margin="10,0,0,0"/>
        </StackPanel>

        <RichTextBox Grid.Row="1" x:Name="rtbResults"/>
    </Grid>
</Window>
